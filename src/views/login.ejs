<%- include('partials/head')%>
<%- include('partials/header')%>
<link rel="stylesheet" href="/css/login.css">

<body>
    <div class="logo">
        <img src="/img/logo3.jpg"  alt="" width="130px" height="130px">
        <h2>LOGIN</h2>
        </div>
    <div class="container">
        
        <% if (locals.error) { %>
            <%= locals.error %>
        <%} %>
        
        
        <form class="form" action="/login" method="post">
            <label class="label-input">
                <input type="text" name="username" id="username" placeholder="Seu E-mail">
            </label>
            <label class="label-input">
                <input type="password" name="password" id="password" placeholder="Sua Senha">
            </label>
            <button class="btn" type="submit">ENTRAR</button>
        </form>
        <div class="cadastro">
            <p><a href="http://localhost:3000/cadastro">Clique aqui para se cadastrar!</a></p>
        </div>
    </div>
</body>

<%- include('partials/footer')%>