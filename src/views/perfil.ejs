
    <%- include('partials/head')%> 

    <%- include('partials/header')%> 
    <link rel="stylesheet" href="/css/perfil.css">
    <body>
      <div class="container ">

        <% if (locals.message) { %>
          <%= locals.message %>
      <%} %>

    
        <img src="/img/iconeperfil.jpg" width="150px" height="150px">
      
        <h1>PERFIL</h1>

        
      
      <form class="form" action="/perfil" method="post"> 
      
        <div class="nome">
      
          <h3>NOME</h3>
         <input value="<%= user.name %>" name="name" />  
      
    
      
        </div>
        <div class="email">
      
          <h3>EMAIL</h3>
          <p>  "<%= user.email %>"  </p> 
      
        </div>
      
        <div class="condominio">
      
          <h3>CONDOMINIO</h3>
           <input value="<%= user.condominio %>" name="condominio" />  

        </div>
      
        <div class="unidade">
          <h3>UNIDADE</h3>
          <input value="<%= user.unidade %>" name="unidade" /> 
          
        </div>
        </form>

        <button class="btn" type="submit">SALVAR</button> 
      </div>
    
      </body>
      


    <%- include('partials/footer')%>


